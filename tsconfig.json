{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2017"],
      "jsx": "react-native",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "paths": {
          "@/*": ["./*"]
      },
      "baseUrl": ".",
      "typeRoots": ["./types", "./node_modules/@types"],
      "types": ["react", "react-native", "styled-components"]
  },
  "include": [
      "**/*.ts",
      "**/*.tsx",
      "state/userAction.ts",
      "./styled-components.native.d.ts",
      "src"
  ]
}

